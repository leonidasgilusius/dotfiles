            "tooltip-format-ethernet": "{ifname} üñß ",
            "on-click": "kitty nmtui"
        },
        "custom/profile": {
        	"exec": "~/.config/waybar/scripts/asus_profile.sh",
        	"interval": 2,
        	"return-type": "json",
        	"on-click": "/home/Leon/.config/waybar/scripts/change_profile.sh"	
        },
	    "pulseaudio": {
	        "format": "{volume}% {icon}",
	        "format-bluetooth": "{volume}% {icon}",
	        "format-muted": "Óª®",
	        "format-icons": {
	        	"headphone": "ÔÄ•",  // nf-fa-headphones
	            "hands-free": "ÔÄ•",  // nf-mdi-headset
	            "headset": "ÔÄ•",  // nf-fa-headset
	            "phone": "ÔÇï",  // nf-fa-phone
	            "portable": "ÔÄ®",  // nf-fa-volume_up
	            "car": "ÔÜπ",  // nf-fa-car
